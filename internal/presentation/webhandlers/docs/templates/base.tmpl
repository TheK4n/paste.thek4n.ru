{{define "base"}}

<!DOCTYPE html>
<html lang='en'>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/docs/static/css/main.css">
        <script src="/docs/static/js/main.js"></script>
        <title>{{.Title}} - API Documentation</title>
    </head>
    <body>
        <main>
            <div class="header">
                <h1>{{.Title}}</h1>
                <p>{{.Description}}</p>
                <p>Base URL: <code>{{.BaseURL}}</code></p>
                <p>Version: {{.Version}}</p>
            </div>
            {{template "main" .}}
        </main>
    </body>
</html>
{{end}}
